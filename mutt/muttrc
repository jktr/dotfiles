### muttrc

## contacts
set alias_file     = "$XDG_CONFIG_HOME/mutt/aliases"
set sort_alias     = alias
set reverse_alias  = yes
source $alias_file 

## net
set ssl_force_tls = yes

## imap
set imap_check_subscribed
set timeout      = 60
set mail_check   = 120
set header_cache = "`mktemp --directory --tmpdir=$XDG_CACHE_HOME mutt.XXXXXXXXXX`"
#set message_cachedir =

## mailbox
set mailcap_path = "$XDG_CONFIG_HOME/mutt/mailcap"
set sort         = threads
set sort_aux     = last-date-received
set sleep_time   = 0
set delete       = yes
set index_format = '%4C [%Z] %23.23F | %s'
set folder_format = '%3C %N  %f'
set browser_abbreviate_mailboxes = no
unignore List-Archive: X-RSS-URL:

## outbound
set forward_format = 'Fwd: %s'
set send_charset = 'us-ascii:utf-8'
set fast_reply=yes
#set edit_headers = yes
set date_format = '!%a %FT%T%z'

## external configs
source "$XDG_CONFIG_HOME/mutt/muttrc.d/accounts"
source "$XDG_CONFIG_HOME/mutt/muttrc.d/gpg"
source "$XDG_CONFIG_HOME/mutt/muttrc.d/colors"
source "$XDG_CONFIG_HOME/mutt/muttrc.d/neomutt"
