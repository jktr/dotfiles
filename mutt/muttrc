### muttrc

## accounts

account-hook . "unset imap_user; unset imap_pass"

source "$XDG_CONFIG_HOME/mutt/muttrc.d/mail.0x16.de"
source "$XDG_CONFIG_HOME/mutt/muttrc.d/gmail.com"
source "$XDG_CONFIG_HOME/mutt/muttrc.d/mail.upb.de"

macro index <F2> '<sync-mailbox><change-folder>imaps://mail.0x16.de/<enter>'
macro index <F3> '<sync-mailbox><change-folder>imaps://imap.gmail.com/<enter>'
macro index <F4> '<sync-mailbox><change-folder>imaps://mail.uni-paderborn.de/<enter>'

## contacts
set alias_file     = "$XDG_CONFIG_HOME/mutt/aliases"
set sort_alias     = alias
set reverse_alias  = yes
source $alias_file 

## net
set ssl_force_tls = yes

## imap
set imap_check_subscribed
set timeout      = 60
set mail_check   = 120
set header_cache = "$XDG_DATA_HOME/mutt/hcache"
#set message_cachedir =

## mailbox
set mailcap_path = "$XDG_CONFIG_HOME/mutt/mailcap"
set sort         = threads
set sort_aux     = last-date-received
set sleep_time   = 0
set delete       = yes
set index_format = '%4C [%Z] %23.23F | %s'
set folder_format = '%3C %N  %f'

## outbound
set forward_format = 'Fwd: %s'
set send_charset = 'us-ascii:utf-8'
set fast_reply=yes
#set edit_headers = yes

## colors
source "$XDG_CONFIG_HOME/mutt/muttrc.d/colors"
