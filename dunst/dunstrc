### dunstrc


[shortcuts]

  # format: ((ctrl|shift|modN)(+(ctrl|shift|mod#))*){0,1}keyname

  # Close notification.
  close     = mod4+c
    
  # Close all notifications.
  close_all = mod4+shift+c
    
  # Show head of history ring
  history   = mod4+mod1+c
    
  # Open contex dmenu
  context   = mod4+ctrl+c


[global]

### text rendering

  # %a  appname
  # %s  summary
  # %b  body
  # %i  iconname (including its path)
  # %I  iconname (without its path)
  # %p  progress value if set ([  0%] to [100%]) or nothing
  format = "<i>%a</i>\n<b>%s</b>\n\n%b"
  
  font = Monospace 8
  line_height = 0
    
  alignment = center
  word_wrap = yes
    
  # GNOME Pango style
  markup = yes
  
  # long text bounce disabled
  bounce_freq = 0           
  ignore_newline = no
  
  # URLs (U) and actions (A)
  show_indicators = no      


### queueing logic

  indicate_hidden = yes
     
  # sort by urgency
  sort = yes                
    
  startup_notification = false

  # disable timeout after n seconds
  idle_threshold = 120
  
  # timer for old messages
  show_age_threshold = 90   

  history_length = 20
  
  # history won't timeout
  sticky_history = yes      


### geometry

  # [{widthPixels}]x{heightInNotifications}[+/-{x}+/-{y}]
  geometry = "490x5-30+20"
  shrink = no

  # between notifications, in px
  separator_height = 2

  # vertical   text padding, in px
  padding = 8

  # horizontal text padding, in px
  horizontal_padding = 8

  monitor = 0

  # don't warp messages around monitors
  follow = none             

  # (left|right|off)
  icon_position = off
  icon_path = /usr/share/icons/Adwaita/16x16/status/:/usr/share/icons/Adwaita/16x16/devices/


### executables

  dmenu = /usr/bin/dmenu -p dunst
  browser = /usr/bin/firefox -new-tab


### color

  transparency = 0
   
  # (auto|foreground|frame|literal X11 color)
  separator_color = frame

  frame_width = 3
  frame_color = "#444444"

[urgency_low]
  background = "#000000"
  foreground = "#c2c2c2"
  timeout = 10

[urgency_normal]
  background = "#444444"
  foreground = "#c2c2c2"
  timeout = 10

[urgency_critical]
  background = "#900000"
  foreground = "#c2c2c2"
  timeout = 0
