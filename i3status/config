# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    color_good = '#6ACC34'
    color_bad  = '#CC6A34'
	
    interval = 5
	
    output_format = i3bar
}


order += 'disk /home'
# order += 'disk /'

disk '/home' {
    format = '%avail'
    low_threshold  = '10' 
    threshold_type = 'percentage_avail'
}

disk '/' {
    format = '%free'
    low_threshold  = '50'
    threshold_type = 'percentage_free'
}


order += 'wireless _first_'
order += 'ethernet _first_'

wireless _first_ {
    format_up = 'w:%ip (%quality @%essid)'
    format_down = 'w:D'
}

ethernet _first_ {
    format_up = 'e:%ip'
    format_down = 'e:D'
}


order += 'load'

load {
     format = '%1min'
}


# order += "cpu_temperature 0"
# order += "cpu_temperature 1"
# order += "cpu_temperature 2"
# order += "cpu_temperature 3"

cpu_temperature 0 {
    format = '%degrees'
    max_threshold = '55'
    path = '/sys/devices/platform/coretemp.0/hwmon/hwmon0/temp2_input'
}

cpu_temperature 1 {
    format = '%degrees'
    max_threshold = '55'
    path = '/sys/devices/platform/coretemp.0/hwmon/hwmon0/temp3_input'
}

cpu_temperature 2 {
    format = '%degrees'
    max_threshold = '55'
    path = '/sys/devices/platform/coretemp.0/hwmon/hwmon0/temp4_input'
}

cpu_temperature 3 {
    format = '%degrees'
    max_threshold = '55'
    path = '/sys/devices/platform/coretemp.0/hwmon/hwmon0/temp5_input'
}


# order += 'volume master'

volume 'master' {
    format = 'v:%volume' # in percent
    format_muted = 'v:X'
    device = 'default'
}


# order += 'battery 0'

battery '0' {
    format = '%status %remaining (%emptytime %consumption)'
    format_down = 'NOBAT'
    low_threshold = '15'
    threshold_type = 'time' # in minutes
    
    last_full_capacity = 'true'
    hide_seconds = 'true'
}


order += 'tztime local'

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}


