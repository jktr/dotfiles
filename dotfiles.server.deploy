# compound target
server_dots=(@ 'server_home_dots' 'server_dot_conf')

server_home_dots=(
  . $HOME
  d .config
  d .gnupg
  @ gnupg  .gnupg/gpg.conf
  @ gnupg  .gnupg/gpg-agent.conf
  @ tmux   .tmux.conf
  @ zsh    .zshenv
  @ zsh    .zlogin
  @ zsh    .zshrc
)

server_dot_conf=(
  . $HOME/.config
  @ .       git
  @ .       htop
  @ .       nano
  @ .       systemd
  @ .       xdg
  @ .       zsh
)
