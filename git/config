[color "blame"]
  recent = blue,12 month ago,white,1 month ago,red

[diff]
  algorithm = minimal
  colorMoved = true
  colorMovedWS = ignore-space-change
  mnemonicPrefix = true

[fetch]
  prune = true
  parallel = 0

[log]
  date = iso-strict
  #showSignature = true

[pull]
  rebase = true

[push]
  followTags = true
  gpgSign = if-asked

[rebase]
  abbreviateCommands = true

[status]
  short = true
  branch = true

[transfer]
  fsckObjects = true

[alias]
  a = add
  ap = add --patch
  b = branch
  bd = branch --delete
  bc = checkout -B
  c = clone --depth=1
  d = diff
  dw = diff --word-diff
  dc = diff --cached
  dcw = diff --cached --word-diff
  f = fetch --recurse-submodules
  i = commit
  ia = commit --amend --no-edit
  iae = commit --amend
  im = "!f() { git commit -m \"$*\"; }; f"
  l = log --shortstat --summary
  ls = ls-files
  o = checkout
  p = pull --rebase=interactive --autostash
  s = status
  ss = submodule status
  v = verify-commit

  initial = commit --message 'initial commit'

  fixup = commit --no-gpg-sign --fixup
  autosquash = "!f() { git rebase -i --autosquash "$1^"; }; f"

  changes = "!f() { \
    { git --no-pager log --max-count=1 --shortstat --color=always ${1:-HEAD};\
    echo; git --no-pager diff --color=always "${1:-HEAD}^" "${1:-HEAD}"; } \
    | $PAGER -r; }; f"

  map = "!f() { echo 'Entering /'; git $@; git submodule foreach git $@; }; f"

  graph = log --graph --all --format=format:\
'%C(yellow)%h\
%C(bold black) %G?%C(reset)\
%C(blue) %aN\
%C(bold black) (%ar)%C(reset)\
%C(green)%d%C(reset)\
%n\
%C(white)%s'

  uncommit = reset --soft HEAD^

  unshallow = pull --unshallow
