      # class            border  bg      fg
      focused_workspace  #444444 #444444 #c2c2c2
      active_workspace   #444444 #444444 #000000
      inactive_workspace #444444 #000000 #666666
      urgent_workspace   #900000 #900000 #c2c2c2
      binding_mode       #386941 #000000 #c2c2c2
    }
  }
