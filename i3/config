# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

### current binds


  # Super = $mod & floating_modifier
  # $mod+
  #  (mundane DE-like actions & modes)
  #    arrows  focus move positional
  #    d       dmenu
  #    f       fullscreen
  #    fn      focus workspace
  #    r       mode resize
  #    space   focus move layers
  #
  #  (changing geometry, layout, and risky things)
  #  Shift+
  #    0        kill (actually WM_DELETE, else X11 SIGKILL)
  #    1        i3 quit
  #    2        i3 restart
  #    3        i3 reload config
  #    arrow    window move on current workspace
  #    fn       window move to other   workspace
  #    h        split direction horizontal
  #    r        rotate container / normal-mode
  #    space    window toggle float
  #    t        tabbed-mode
  #    v        split direction vertical
  #
  #  (X11 application shortcuts)
  #  Control+
  #    b        browser
  #    e        text editor (visual)
  #    g        games
  #    i        irc client
  #    m        multimedia
  #    l        screenlocker
  #    p        e-mail client
  #    s        suspend (and lock screen)
  #    t        torrent client
  #    return   terminal

### init

  set $mod Mod4


### UX commands / shortcuts

  bindsym $mod+d               exec dmenu_run

  bindsym $mod+Shift+0         kill

  bindsym $mod+Control+Return  exec i3-sensible-terminal
  bindsym $mod+Control+b       exec firefox
  bindsym $mod+Control+e       exec i3-sensible-editor
  bindsym $mod+Control+g       exec steam
  bindsym $mod+Control+i       exec hexchat
  bindsym $mod+Control+m       exec vlc
  bindsym $mod+Control+l       exec i3lock --color=000000
  bindsym $mod+Control+p       exec thunderbird
  bindsym $mod+Control+s       exec "i3lock --color=000000 && systemctl suspend" 
  bindsym $mod+Control+t       exec transmission-gtk


### appearance

  ## font
  font pango:DejaVu Sans Mono 8

  ## window
  new_window 1pixel

  ## colors
  # class                  border   backgr.  text     indica.
  client.focused           #4c7899  #285577  #ffffff  #2e9ef4
  client.focused_inactive  #333333  #5f676a  #ffffff  #484e50
  client.unfocused         #333333  #222222  #888888  #292d2e
  client.urgent            #3f343a  #900000  #ffffff  #900000
  #client.placeholder       #000000  #0c0c0c  #ffffff  #000000
  client.background        #ffffff
  

### meta binds

  bindsym $mod+Shift+1 exec "i3-nagbar -t warning -m 'Quit i3!?' -b 'Yes, really!' 'i3-msg exit'"
  bindsym $mod+Shift+2 restart
  bindsym $mod+Shift+3 reload


### focus binds

  ## focus inheritance
  #bindsym $mod+a focus parent
  #bindsym $mod+d focus child

  ## focus positional
  bindsym $mod+Left  focus left
  bindsym $mod+Down  focus down
  bindsym $mod+Up    focus up
  bindsym $mod+Right focus right

  ## focus layers
  bindsym $mod+space focus mode_toggle


### layout binds

  ## spawn
  bindsym $mod+h split h
  bindsym $mod+v split v

  ## move focused around
  bindsym $mod+Shift+Left  move left
  bindsym $mod+Shift+Down  move down
  bindsym $mod+Shift+Up    move up
  bindsym $mod+Shift+Right move right

  ## display modes
  #bindsym $mod+s           layout   stacking
  bindsym $mod+Shift+t     layout   tabbed
  bindsym $mod+Shift+r     layout   toggle split
  bindsym $mod+Shift+space floating toggle

  ## float
  floating_modifier $mod
  bindsym $mod+f fullscreen toggle

  ## scratch
  #bindsym $mod+m move scratchpad
  #bindsym $mod+o scratchpad show


### workspace binds

  ## switch
  bindsym $mod+F1  workspace  1
  bindsym $mod+F2  workspace  2
  bindsym $mod+F3  workspace  3
  bindsym $mod+F4  workspace  4
  bindsym $mod+F5  workspace  5
  bindsym $mod+F6  workspace  6
  bindsym $mod+F7  workspace  7
  bindsym $mod+F8  workspace  8
  bindsym $mod+F9  workspace  9
  bindsym $mod+F10 workspace 10
  bindsym $mod+F11 workspace 11
  bindsym $mod+F12 workspace 12

  ## move focused to workspace
  bindsym $mod+Shift+F1  move container to workspace  1
  bindsym $mod+Shift+F2  move container to workspace  2
  bindsym $mod+Shift+F3  move container to workspace  3
  bindsym $mod+Shift+F4  move container to workspace  4
  bindsym $mod+Shift+F5  move container to workspace  5
  bindsym $mod+Shift+F6  move container to workspace  6
  bindsym $mod+Shift+F7  move container to workspace  7
  bindsym $mod+Shift+F8  move container to workspace  8
  bindsym $mod+Shift+F9  move container to workspace  9
  bindsym $mod+Shift+F10 move container to workspace 10
  bindsym $mod+Shift+F11 move container to workspace 11
  bindsym $mod+Shift+F12 move container to workspace 12


### modes

  mode "resize" {
    bindsym Left  resize shrink width  5 px or 5 ppt
    bindsym Down  resize grow   height 5 px or 5 ppt
    bindsym Up    resize shrink height 5 px or 5 ppt
    bindsym Right resize grow   width  5 px or 5 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
  }

  bindsym $mod+r mode "resize"


### options

  popup_during_fullscreen leave_fullscreen


### status bar 

  bar {
    status_command i3status

    position       top
    mode           hide
    modifier       $mod
    tray_output    primary

    font           pango:DejaVu Sans Mono, Icons 8
    colors {
      background   #000000
      statusline   #c2c2c2
    }
  }
