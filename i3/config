# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

### current bindings

# $mod & floating_modifier is `Super`

# $mod+
#  # mundane DE-like actions & modes
#  arrows  move focus
#  d       dmenu
#  f       fullscreen
#  fn      focus workspace
#  space   focus move layers
#
#  Tab     launch-mode  (exit with Esc / Return)
#    b       browser
#    e       editor
#    g       games
#    i       irc
#    m       multimedia
#    p       post/mail
#    t       torrent
#
#  r       resize-mode  (exit with Esc / Return)
#    Arrows    grow/shrink window in direction (+Shift for small increments)
#
#  s       session-mode  (exit with Esc / Return)
#    0       kill (actually WM_DELETE, else X11 SIGKILL)
#    1       i3 quit (with confirm dialog)
#    2       i3 restart
#    3       i3 reload config
#
#  # shift geometry, layout
#  Shift+
#    arrow    window focused move workspace
#    fn       window move to other   workspace
#    h        split direction horizontal
#    r        rotate container / normal-mode
#    space    window toggle float
#    t        tabbed-mode
#    v        split direction vertical


### base

  set $mod Mod4


### appearance

  ## font
  font pango:DejaVu Sans Mono 8

  ## window
  new_window pixel 1

  ## colors
  # class                  border   backgr.  text     indica.
  client.focused           #386941  #386941  #c2c2c2  #3A827A
  client.focused_inactive  #444444  #444444  #c2c2c2  #444444
  client.unfocused         #444444  #444444  #c2c2c2  #444444
  client.urgent            #900000  #900000  #c2c2c2  #900000
  #client.placeholder       #000000  #000000  #c2c2c2  #000000
  client.background        #000000
  

### focus binds

  ## focus inheritance
  #bindsym $mod+a focus parent
  #bindsym $mod+d focus child

  ## focus positional
  bindsym $mod+Left  focus left
  bindsym $mod+Down  focus down
  bindsym $mod+Up    focus up
  bindsym $mod+Right focus right

  ## focus layers
  bindsym $mod+space focus mode_toggle


### layout binds

  ## split orientation
  bindsym $mod+h split h
  bindsym $mod+v split v

  ## move focused around
  bindsym $mod+Shift+Left  move left
  bindsym $mod+Shift+Down  move down
  bindsym $mod+Shift+Up    move up
  bindsym $mod+Shift+Right move right

  ## display modes
  #bindsym $mod+s           layout   stacking
  bindsym $mod+Shift+t     layout   tabbed
  bindsym $mod+Shift+r     layout   toggle split
  bindsym $mod+Shift+space floating toggle

  ## float
  floating_modifier $mod

  ## fullscreen
  bindsym $mod+f fullscreen toggle


### workspace binds

  ## switch
  bindsym $mod+F1  workspace  1
  bindsym $mod+F2  workspace  2
  bindsym $mod+F3  workspace  3
  bindsym $mod+F4  workspace  4
  bindsym $mod+F5  workspace  5
  bindsym $mod+F6  workspace  6
  bindsym $mod+F7  workspace  7
  bindsym $mod+F8  workspace  8
  bindsym $mod+F9  workspace  9
  bindsym $mod+F10 workspace 10
  bindsym $mod+F11 workspace 11
  bindsym $mod+F12 workspace 12

  ## move focused to workspace
  bindsym $mod+Shift+F1  move container to workspace  1
  bindsym $mod+Shift+F2  move container to workspace  2
  bindsym $mod+Shift+F3  move container to workspace  3
  bindsym $mod+Shift+F4  move container to workspace  4
  bindsym $mod+Shift+F5  move container to workspace  5
  bindsym $mod+Shift+F6  move container to workspace  6
  bindsym $mod+Shift+F7  move container to workspace  7
  bindsym $mod+Shift+F8  move container to workspace  8
  bindsym $mod+Shift+F9  move container to workspace  9
  bindsym $mod+Shift+F10 move container to workspace 10
  bindsym $mod+Shift+F11 move container to workspace 11
  bindsym $mod+Shift+F12 move container to workspace 12


### basic commands

  bindsym $mod+d               exec dmenu_run

  # ensure that we can alway open a terminal
  bindsym $mod+Return exec i3-sensible-terminal


### modes

  ## launch-mode
  # for launching X11 applications
  set $m_x11launch  "<launch> [b]rowser [e]ditor [g]ames [i]rc [m]ultimedia [p]ost/mail [t]orrent"
  mode $m_x11launch {

    bindsym b exec firefox              ; mode "default"
    bindsym e exec i3-sensible-editor   ; mode "default"
    bindsym g exec steam                ; mode "default"
    bindsym i exec hexchat              ; mode "default"
    bindsym m exec vlc                  ; mode "default"
    bindsym p exec thunderbird          ; mode "default"
    bindsym t exec transmission-gtk     ; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
  }


  ## resize-mode
  # for resizing tiles
  set $m_resize  "<resize>"
  mode $m_resize {

    set $resize_s  1
    set $resize_m 10

    # medium resize
    bindsym Left  resize shrink width  $resize_m px or $resize_m ppt
    bindsym Down  resize grow   height $resize_m px or $resize_m ppt
    bindsym Up    resize shrink height $resize_m px or $resize_m ppt
    bindsym Right resize grow   width  $resize_m px or $resize_m ppt

    # small resize with Shift
    bindsym Shift+Left  resize shrink width  $resize_s px or $resize_s ppt
    bindsym Shift+Down  ressdfize grow   height $resize_s px or $resize_s ppt
    bindsym Shift+Up    resize shrink height $resize_s px or $resize_s ppt
    bindsym Shift+Right resize grow   width  $resize_s px or $resize_s ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
  }


  ## session-mode
  # for meta-actions in the session
  set $m_session "<session> [p]oweroff [l]ock [r]eboot [s]uspend | 0:WM_DELETE 1:exit 2:restart 3:reload"
  mode $m_session {

    # system power
    bindsym r exec "i3-nagbar -t warning -m 'Reboot!?' -b 'Yes, REBOOT!' 'systemctl reboot'"       ; mode "default"
    bindsym p exec "i3-nagbar -t warning -m 'Poweroff!?' -b 'Yes, POWEROFF!' 'systemctl poweroff'" ; mode "default"

    # locking session
    bindsym l exec "i3lock --color=000000"                       ; mode "default"
    bindsym s exec "i3lock --color=000000 && systemctl suspend"  ; mode "default"

    bindsym 0 kill       ; mode "default"

    # i3 meta stuff
    bindsym 1 exec "i3-nagbar -t warning -m 'Quit i3!?' -b 'Yes, EXIT i3!' 'i3-msg exit'" ; mode "default"
    bindsym 2 restart    ; mode "default"
    bindsym 3 reload     ; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
  }


  ## mode binds
  bindsym $mod+s   mode $m_session
  bindsym $mod+Tab mode $m_x11launch
  bindsym $mod+r   mode $m_resize


### options

  # prevents wondering why UI suddenly stopped responding
  popup_during_fullscreen leave_fullscreen


### status bar 

  bar {
    status_command i3status

    position       top
    mode           hide
    modifier       $mod
    tray_output    primary

    font           pango:DejaVu Sans Mono, Icons 8
    colors {
      background   #000000
      statusline   #c2c2c2
    }
  }
